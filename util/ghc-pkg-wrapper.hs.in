module Main where
import IO
import System.Cmd
import System.Exit
import System.Directory
import System.Environment

main = do
	let config_path = "__CONFIG_PATH__"
	createInstallPath config_path
	args <- getArgs
	let ghc_pkg = "ghc-pkg -f " ++ config_path
	exitcode <- system (foldl (\x y -> x ++ " " ++ y) ghc_pkg args)
	exitWith exitcode

createInstallPath path = do
	config_exists <- doesFileExist path
	if config_exists
		then return ()
		else bracket (openFile path WriteMode) hClose (\h -> do hPutStr h "[]")
