
macro statement_control:<aaa> ( $a ) is parsed ( /
    <?ws>? \( <?ws>? $a := (.*?) <?ws>? \) <?ws>? \;
/ ) 
{ 
    return $a ; 
}

'1' infix:<+> '1';
'1' infix:<*> '1';
'1' infix:<+> '1' infix:<*> '1';
'1' infix:<*> '1' infix:<+> '1';

statement_control:<aaa> ( say 'something'; );
statement_control:<aaa> ( say 'interesting'; );

