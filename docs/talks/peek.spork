== Parsing terms
.vim
filetype: perl6
rule term
    { undef : { return VUndef    }
    | (\d+) : { return VInt($0)  }
    }

rule expr
    { <term> : { return Val($term) }
    | $<lhs> := <expr>
                <operator>
      $<rhs> := <expr>
      : { return Op(Val($<operator>), $<lhs>, $<rhs>) }
    }
.vim
+.vim
filetype: perl6
rule operator
    { $<op> := <[+-]>
      : { return VStr($<op>)
    }
.vim

