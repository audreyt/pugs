html_embedded_text
----
 token html_embedded_text {
     | &lt;!before \&lt; &gt; . &lt;~~&gt;
     | ''
 }
----
Lookahead
----
 token html_embedded_text {
     | {{#c|&lt;!before \&lt; &gt;}} . &lt;~~&gt;
     | ''
 }
 # the current position
 # of the parser is
 # not before a '&lt;'
 # character
----
 token html_embedded_text {
     | &lt;!before \&lt; &gt; {{#c|.}} &lt;~~&gt;
     | ''
 }
 # parse the next
 # character (which
 # we know is not
 # a '&lt;')
----
Recursion
----
 token html_embedded_text {
     | &lt;!before \&lt; &gt; {{#c|.}} &lt;~~&gt;
     | ''
 }
 # parse the next
 # character (which
 # we know is not
 # a '&lt;')
----
 token html_embedded_text {
     | &lt;!before \&lt; &gt; . {{#c|&lt;~~&gt;}}
     | ''
 }
 # parse any text
 # matching the
 # &lt;html_embedded_text&gt;
 # regex
----
 token html_embedded_text {
     | &lt;!before \&lt; &gt; . &lt;~~&gt;
     {{#c|| ''}}
 }
 # or if that expression
 # does not match
 # match the empty
 # string
