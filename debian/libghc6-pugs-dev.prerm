#!/bin/sh

GHC=ghc-6.4
VERSION=6.2.10

case "$1" in
	remove|upgrade|deconfigure)
		/usr/lib/${GHC}/bin/ghc-pkg -r Pugs
		rm -vf /usr/lib/haskell-packages/ghc6/lib/Pugs-${VERSION}/HSPugs-${VERSION}.o
	;;

	failed-upgrade)
	;;

	*)
		echo "prerm called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

