#!/usr/local/bin/perl

use STD;
use utf8;

my $failures = 0;

if (not @ARGV) {
    chomp(@ARGV = <STDIN>);
    s/^[AU]+\s+// for @ARGV;
}

for my $file (@ARGV) {
    warn $file,"\n" if @ARGV > 1;
    eval {
	warn "Undefined\n" unless defined STD->parsefile($file);
    };
    if ($@) {
	warn $@;
	$failures++;
    }
}
my ($time, $vsz) = split(' ', `ps -o "time= vsz=" $$`);
$time =~ s/^00://;
$vsz =~ s/\d\d\d$/m/;
warn "$time $vsz\n" if $vsz;

exit $failures;
