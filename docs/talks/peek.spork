== Parsing terms
.vim
filetype: perl6
rule term
    { undef : { return VUndef    }
    | (\d+) : { return VInt($0)  }
    }

rule expr
    { <term> : { return Val($term) }
    | (<expr>) (<[+-]>) (<expr>)
             : { return Op(VStr($1), $0, $2) }
    }
