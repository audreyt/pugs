#!/usr/bin/perl

use Cwd;
use Config;
use FindBin;
use File::Copy;
use File::Basename;

if (!@ARGV) {
    die "Usage: $0 [ source[.p6] | -e oneliner ]\n";
}

if (!-e "src/Main.hs") {
    chdir "$FindBin::Bin/..";
    if (!-e "src/Main.hs") {
	die "$0: This script must be invoked in the Pugs source tree directory."
    }
}

$ENV{PATH} .= $Config{path_sep} . cwd() unless $^O eq 'MSWin32';

unlink "dump.ast";

my $out = 'a';
if (@ARGV and -e $ARGV[0]) {
    $out = basename($ARGV[0]);
    $out =~ s{\..*}{};
}

system("pugs", -C => @ARGV);
exit 1 unless -e "dump.ast";

copy ("src/Main.hs" => "src/MainCc.hs");

open FH, ">> src/MainCC.hs";
open AST, "dump.ast" or die $!;
print FH "\nmainCC = runAST \$ ";
print FH <AST>;
close AST;
close FH;

$out .= ($^O eq 'MSWin32') ? ".exe" : ".out";
system("ghc", "-v0", "-o", $out, "--make", "-main-is", "mainCC", "-isrc", "src/MainCC.hs");
unlink "src/MainCC.hs";
print "Generated output: $out\n";
