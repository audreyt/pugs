#include <stdio.h>
#include <smop.h>
#include <smop_s1p.h>
#include <smop_slime.h>
#include <smop_oo.h>

int main() {
  smop_init();

  printf("1..5\n");


  SMOP__Object* interpreter = SMOP_DISPATCH(SMOP__INTPTR__InterpreterInstance, SMOP_RI(SMOP__INTPTR__InterpreterInstance),
                                            SMOP__ID__new, 
                                            SMOP__NATIVE__capture_create(SMOP__INTPTR__InterpreterInstance,
                                                                         SMOP__INTPTR__InterpreterInstance,NULL,NULL));
  SMOP__Object* frame;
  SMOP__Object* scalar1 = SMOP__S1P__Scalar_create(SMOP__NATIVE__bool_true);
  
  $frame = q:sm0p {
    $scalar1;
    SMOP__p6opaque__RI.SMOP__ID__REPR_CREATE();
    SMOP__SLIME__CurrentFrame.move_capturize(SMOP__SLIME__Capturize.new(2,(1),(),1));
    $scalar1.SMOP__ID__STORE();
  };

  if (!frame) printf("not ");
  printf("ok 1 - frame created.\n");

  SMOP_DISPATCH(interpreter, SMOP_RI(interpreter),
                SMOP__ID__goto,
                frame);

  printf("ok 2 - goto frame.\n");

  SMOP_DISPATCH(interpreter, SMOP_RI(interpreter),
                SMOP__ID__loop, SMOP__NATIVE__capture_create(interpreter,
                                                             SMOP_REFERENCE(interpreter,interpreter),
                                                             NULL, NULL));
  printf("ok 3 - interpreter loop.\n");


  SMOP__Object* r1 = SMOP__S1P__Scalar_FETCH(scalar1);
  if (SMOP_RI(r1) != (SMOP__ResponderInterface*)SMOP__p6opaque__RI) printf("not ");
  printf("ok 4 - P6 Opaque created inside the interpreter loop\n");

  SMOP_RELEASE(interpreter,scalar1);

  SMOP_DISPATCH(interpreter, SMOP_RI(interpreter),
                SMOP__ID__loop, SMOP__NATIVE__capture_create(interpreter,
                                                             SMOP_REFERENCE(interpreter,interpreter),
                                                             NULL, NULL));

  SMOP_RELEASE(SMOP__INTPTR__InterpreterInstance,interpreter);

  printf("ok 5 - Scalar destroyed should free the p6opaque object also.\n");

  smop_destr();
  return 0;
}
